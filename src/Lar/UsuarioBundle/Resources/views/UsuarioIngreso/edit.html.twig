{% extends '::layout.html.twig' %}
{% block id  "mod_usuario_ingreso" %}

    {% block title %}
        {{ parent() }} -  {{ 'views.edit.edit'|trans({'%entity%': 'UsuarioIngreso'}, 'JordiLlonchCrudGeneratorBundle') }}
    {% endblock %}

    {% block page %}
        <section id="form">
            <h1>{{ 'views.edit.edit'|trans({'%entity%': 'UsuarioIngreso'}, 'JordiLlonchCrudGeneratorBundle') }}</h1>

            <form class="well" action="{{ path('usuarioingreso_update', { 'id': entity.id }) }}"
                  method="post" {{ form_enctype(edit_form) }}>
                <input type="hidden" name="_method" value="PUT"/>
                {{ form_widget(edit_form) }}
                <p>
                    <button type="submit"
                            class="btn btn-success">{{ 'views.edit.editbutton'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
                </p>
            </form>
            <div>
                <div class="float-left">
                    <a class="btn" href="{{ path('usuarioingreso') }}">
                        {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
                    </a>
                </div>
                <div class="float-left">
                    <form action="{{ path('usuarioingreso_delete', { 'id': entity.id }) }}" method="post">
                        <input type="hidden" name="_method" value="DELETE"/>
                        {{ form_widget(delete_form) }}
                        <button class="btn btn-danger" type="submit"
                                onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}');">{{ 'views.recordactions.delete'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
                    </form>
                </div>
            </div>
        </section>
    {% endblock %}