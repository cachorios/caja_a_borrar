{% extends '::layout.html.twig' %}

{% block title %}
    {{ parent() }} - Usuario {{ 'views.new.creation'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{#Para limpiar la cabecera el header sin contenido#}
{% block header %}{% endblock header %}

{% block headline %}
    <h1>Nuevo Usuario
        <small>Agregar un usuario al sistema.</small>
    </h1>
{% endblock headline %}

{% block page %}
    <section>

        <header>
            <h1>Nuevo Usuario </h1>
        </header>
        {{ wo_render_breadcrumbs() }}
        <div class="row-fluid">


            <div class="span12">


                <form class="form-horizontal" action="{{ path('usuario_create') }}"
                      method="post" {{ form_enctype(edit_form) }}>
                    {% include 'UsuarioBundle:Usuario:_form.twig.html'  %}
                    <div class="form-actions">
                        <button type="submit"
                                class="btn btn-success">{{ 'views.new.create'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="row-fluid">
            <div class="float-left">
                <a class="btn" href="{{ path('usuario') }}">
                    {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
                </a>
            </div>
        </div>
    </section>
{% endblock %}