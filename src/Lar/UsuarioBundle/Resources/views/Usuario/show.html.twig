{% extends '::layout.html.twig' %}
{% block id  "mod_usuario" %}

    {% block title %}
        {{ parent() }} - Observar Usuario
    {% endblock %}


    {% block page %}
        <section id="view">
            <header>
                <h1>Ver Usuario - <span style="color: #0064cd"> {{ entity }}</span></h1>
            </header>
            {{ wo_render_breadcrumbs() }}
            <div class="row-fluid">
                <form class="form-horizontal">

                    <fieldset>
                        <legend>Datos personal</legend>
                        <div class="control-group">
                            <label class="control-label">Id</label>

                            <div class="controls"><span class="input-xlarge uneditable-input">{{ entity.id }}</span>
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">Nombre</label>

                            <div class="controls"><span class="input-xlarge uneditable-input">{{ entity.nombre }}</span>
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">Apellido</label>

                            <div class="controls"><span
                                    class="input-xlarge uneditable-input">{{ entity.apellido }}</span>
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">Email</label>

                            <div class="controls"><span class="input-xlarge uneditable-input">{{ entity.email }}</span>
                            </div>
                        </div>

                        <div class="control-group">
                            <label class="control-label">Direccion</label>

                            <div class="controls"><span
                                    class="input-xlarge uneditable-input">{{ entity.direccion }}</span>
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">Permite_email</label>

                            <div class="controls"><span
                                    class="input-xlarge uneditable-input">{{ entity.permiteemail }}</span>
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">Isactive</label>

                            <div class="controls"><span
                                    class="input-xlarge uneditable-input">{{ entity.isActive }}</span>
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">Isdeleted</label>

                            <div class="controls"><span
                                    class="input-xlarge uneditable-input">{{ entity.isDeleted }}</span>
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">Fecha_alta</label>

                            <div class="controls"><span
                                    class="input-xlarge uneditable-input">{{ entity.fechaalta|date('Y-m-d H:i:s') }}</span>
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">Fecha_nacimiento</label>

                            <div class="controls"><span
                                    class="input-xlarge uneditable-input">{{ entity.fechanacimiento|date('Y-m-d H:i:s') }}</span>
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">Dni</label>

                            <div class="controls"><span class="input-xlarge uneditable-input">{{ entity.dni }}</span>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="row-fluid">
                <div class="offset2 span2">
                    <a class="btn" href="{{ path('usuario') }}">
                        {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
                    </a>
                </div>
                <div class="span2">
                    <a class="btn btn-primary" href="{{ path('usuario_edit', { 'id': entity.id }) }}">
                        {{ 'views.recordactions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
                    </a>
                </div>
                <div class="span2">
                    <form action="{{ path('usuario_delete', { 'id': entity.id }) }}" method="post">
                        {{ form_widget(delete_form) }}
                        <button class="btn btn-danger" type="submit"
                                onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}');">{{ 'views.recordactions.delete'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
                    </form>
                </div>
            </div>
        </section>
    {% endblock %}