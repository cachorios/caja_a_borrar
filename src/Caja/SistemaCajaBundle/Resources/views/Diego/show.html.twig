{% extends '::layout.html.twig' %}
{% block id  'mod_Diego' %}
{% block title %}
{{ parent() }} - Diego {{ 'views.show.show'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block page %}

<section id="view_Diego">
    <header>
        <h1>Diego</h1>
    </header>
    {{ wo_render_breadcrumbs() }}
    {% for type, flashMessages in app.session.flashbag.all() %}
        {% for flashMessage in flashMessages %} 
            <div class='alert alert-{{ type }}'> 
             {{ flashMessage|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
            </div> 
        {% endfor %} 
    {% endfor %} 
    <div class="row-fluid">
        <div class="span12">
            <form class="form-horizontal">
                <fieldset>                        <div class="control-group">
                            <label class="control-label">Id</label>

                            <div class="controls">                                    <span class="input-xlarge uneditable-input">{{ entity.id }}</span>                            </div>
                        </div>                        <div class="control-group">
                            <label class="control-label">Descripcion</label>

                            <div class="controls">                                    <span class="input-xlarge uneditable-input">{{ entity.descripcion }}</span>                            </div>
                        </div>                        <div class="control-group">
                            <label class="control-label">Fecha</label>

                            <div class="controls">                                    <span class="input-xlarge uneditable-input">{{ entity.fecha|date('Y-m-d H:i:s') }}</span>                            </div>
                        </div>                        <div class="control-group">
                            <label class="control-label">Precio</label>

                            <div class="controls">                                    <span class="input-xlarge uneditable-input">{{ entity.precio }}</span>                            </div>
                        </div>                </fieldset>
            </form>
        </div>
    </div>

        <div class="row-fluid">
    <div class="offset1 span2">
        <a class="btn" href="{{ path('diego') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="span2">
        <a class="btn btn-primary" href="{{ path('diego_edit', { 'id': entity.id }) }}">
            {{ 'views.recordactions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <form action="{{ path('diego_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}');">{{ 'views.recordactions.delete'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
        </form>
    </div>
</div></section>
{% endblock %}