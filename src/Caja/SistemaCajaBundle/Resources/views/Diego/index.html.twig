{% extends '::layout.html.twig' %}
{% block id  'mod_Diego' %}
{% block title %}
{{ parent() }} - Diego {{ 'views.index.list'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block page %}

<section id="Diego">
    <header>
        <h1>Diego {{ 'views.index.list'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
            <div class="filters-right">
                <a class="btn dropdown-toggle btn-mini" data-toggle="collapse" data-target="#filters">
                    {{ 'views.index.filters'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
                    <span class="caret"></span>
                </a> &nbsp;
            </div>
        </h1>
    </header>
    {{ wo_render_breadcrumbs() }}
    {% for type, flashMessages in app.session.flashbag.all() %}
        {% for flashMessage in flashMessages %} 
            <div class='alert alert-{{ type }}'> 
             {{ flashMessage|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
            </div> 
        {% endfor %} 
    {% endfor %} 
    <div class="span12">
        {% if form_errors(filterForm) %}
        <div class="alert alert-block alert-error fade in form-errors">
            {{ form_errors(filterForm) }}
        </div>
        {% endif %}
        &nbsp;
    </div>

    <div class="row-fluid">
        <div class="span12">
            <div id="filters" class="collapse">

                <form class="well" action="{{ path('diego') }}"
                      method="post" {{ form_enctype(filterForm) }}>
                        {{ form_row(filterForm.id) }}
                        {{ form_row(filterForm.descripcion) }}
                        {{ form_row(filterForm.fecha) }}
                        {{ form_row(filterForm.precio) }}
                    {{ form_rest(filterForm) }}

                    <p>
                        <button type="submit" name="filter_action"
                                value="reset">{{ 'views.index.reset'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
                        <button type="submit" name="filter_action"
                                value="filter">{{ 'views.index.filter'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
                    </p>
                </form>
            </div>
        </div>

        <div class="span12">

            <table class="table table-striped table-bordered table-condensed">
                <thead>
                <tr>
                        <th>Id</th>
                        <th>Descripcion</th>
                        <th>Fecha</th>
                        <th>Precio</th>
                    <th>{{ 'views.index.actions'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                <tr>
                    <td>
                        <a href="{{ path('diego_show', { 'id': entity.id }) }}">{{ entity.id }}</a>
                    </td>
                        <td>{{ entity.descripcion }}</td>
                        <td>{% if entity.fecha %}{{ entity.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{{ entity.precio }}</td>
                        <td>
        <a class="btn btn-mini" href="{{ path('diego_show', { 'id': entity.id }) }}">
            {{ 'views.actions.show'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
        <a class="btn btn-mini" href="{{ path('diego_edit', { 'id': entity.id }) }}">
            {{ 'views.actions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>                        </td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

    </div>

    <div class="row-fluid">

        <div class="span8">
            {{ pagerHtml|raw }}
        </div>

                    <div class="span4">
                <a class="btn btn-primary likepaginator" href="{{ path('diego_new') }}">
                    {{ 'views.index.createnew'|trans({}, 'JordiLlonchCrudGeneratorBundle') }} Diego
                </a>
            </div>
            </div>

</section>


    {% endblock %}