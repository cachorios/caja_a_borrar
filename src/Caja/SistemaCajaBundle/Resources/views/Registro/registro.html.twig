{% extends '::layout.html.twig' %}
{% block id 'mod_registro' %}

    {#{% form_theme form _self %}#}
    {% block title %}
        {{ parent() }} - Registro de Comprobantes
    {% endblock %}

    {% block page %}

        <section id="form_CodigoBarra">

            <header>
                <h1>Registro de Comprobantes - {{ caja.nombre }}</h1>
            </header>

            {#{{ wo_render_breadcrumbs() }}#}
            {% for type, flashMessages in app.session.flashbag.all() %}
                {% for flashMessage in flashMessages %}
                    <div class='alert alert-{{ type }}'>
                        {{ flashMessage|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
                    </div>
                {% endfor %}
            {% endfor %}

            <div class="row-fluid">
                <h3>
                    <div class="span6">Cajero: {{ caja.cajero }} </div>
                    <div class="span6"> Apertura Nro. : {{ apertura.id }}</div>
                </h3>
            </div>
            <div class="sub-header">
                 <h2 style="font-size: 16px;">Codigo de Barra</h2>
            </div>
            <div style="line-height: 5px;">&nbsp; </div>
            <div class="row-fluid">
                <div class="span8">
                    <input id="txtcodigobarra" type="text" value="" name="codigobarra" class="input-xxlarge">
                 </div>
                <div class="span4">
                    <div id="msgBarra"></div>
                </div>
            </div>
            <div class="sub-header">
                <h2 style="font-size: 16px;">Comprobantes</h2>
            </div>
            <form class="form-horizontal" action="{{ path('registro_create' ) }}"
                  method="post" {{ form_enctype(form) }}>


                <ul class="errorMessages"></ul>


                {% include 'SistemaCajaBundle:Registro:_form.html.twig' %}

                <div class="form-actions">
                    <button type="submit" class="btn btn-success">Registrar</button>
                    <button class="btn" type="reset">Cancelar</button>
                </div>
            </form>


        </section>


    {% endblock %}