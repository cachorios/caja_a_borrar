{% extends '::layout.html.twig' %}
{% block id  'mod_TipoPago' %}
{% block title %}
{{ parent() }} - Tipos de Pago {{ 'views.show.show'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block page %}

<section id="view_TipoPago">
    <header>
        <h1>Tipos de Pago</h1>
    </header>
    {{ wo_render_breadcrumbs() }}
    {% for type, flashMessages in app.session.flashbag.all() %}
        {% for flashMessage in flashMessages %} 
            <div class='alert alert-{{ type }}'> 
             {{ flashMessage|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
            </div> 
        {% endfor %} 
    {% endfor %} 
    <div class="row-fluid">
        <div class="span12">
            <form class="form-horizontal">
                <fieldset>                        <div class="control-group">
                            <label class="control-label">Id</label>
                            <div class="controls">                                    <span class="input-xlarge uneditable-input">{{ entity.id }}</span>                            </div>
                        </div>                        <div class="control-group">
                            <label class="control-label">Descripción</label>
                            <div class="controls">                                    <span class="input-xlarge uneditable-input">{{ entity.descripcion }}</span>                            </div>
                        </div>                        <div class="control-group">
                            <label class="control-label">Observación</label>
                            <div class="controls">                                    <span class="input-xlarge uneditable-input">{{ entity.observacion }}</span>                            </div>
                        </div>                        <div class="control-group">
                            <label class="control-label">Divisible</label>
                            <div class="controls">                                    <span class="input-xlarge uneditable-input">{{ entity.divisible }}</span>                            </div>
                        </div>                </fieldset>
            </form>
        </div>
    </div>


<div class="row-fluid">
    <div class="span12">
    <div class="offset2 span2">
        <a class="btn" href="{{ path('tipopago') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="span2">
        <a class="btn btn-primary" href="{{ path('tipopago_edit', { 'id': entity.id }) }}">
            {{ 'views.recordactions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="span2">
        <form action="{{ path('tipopago_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}');">{{ 'views.recordactions.delete'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
        </form>
    </div>
    </div>
</div>

{% endblock %}