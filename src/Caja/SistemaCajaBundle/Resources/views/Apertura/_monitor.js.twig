<script type="text/javascript">

    /**
     * Funcion que recibe un tipo de seccion y hace una llamada ajax
     * para mostrar el detall de cobros para esa seccion en la caja actual
     */

    function VerMasInfo(seccion) {
        var nombre_seccion = "#mas_info_" + seccion;
        //jQuery(nombre_seccion).html(nombre_seccion);
        // Primero se hace la llamada ajax
        var url= "{{ path('apertura_mas_info') }}";
        $.blockUI({ message:"Espere por favor..." });
        jQuery.get(url, {'tipo_seccion': seccion },function(data){
            jQuery(nombre_seccion).html(data);
            $.unblockUI();
        });
    }
    ;
</script>