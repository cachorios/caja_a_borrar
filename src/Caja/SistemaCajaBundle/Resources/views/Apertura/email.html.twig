{% block page %}
    <section id="view_Apertura">
        <header>
            <h1 style="font-size: 20px; align=left; font-family: sans-serif, Verdana, Arial, Helvetica; font-weight: bold; color: #000040;">
                <img src="http://posadas.gov.ar/images_mail/mailmembretetemplate.jpg" width="400" />
                <br>
                Apertura - Resumen del Archivo de Cobranza
            </h1>
        </header>
        <fieldset>
            <div style="font-size: 14px; font-family: sans-serif, Verdana, Arial, Helvetica; font-weight: bold; color: #0000CC;">
                <label style="font-size: 14px; font-family: sans-serif, Verdana, Arial, Helvetica; font-weight: bold; color: #000012;">Fecha:&nbsp;</label>
                <span>{{ entity.fecha|date('d-m-Y ') }}</span>
            </div>

            <div style="font-size: 14px; font-family: sans-serif, Verdana, Arial, Helvetica; font-weight: bold; color: #0000CC;">
                <label style="font-size: 14px; font-family: sans-serif, Verdana, Arial, Helvetica; font-weight: bold; color: #000012;">Nombre del Archivo:&nbsp;</label>
                <span>{{ entity.archivocierre }}</span>
            </div>
            <div style="font-size: 14px; font-family: sans-serif, Verdana, Arial, Helvetica; font-weight: bold; color: #0000CC;">
                <label style="font-size: 14px; font-family: sans-serif, Verdana, Arial, Helvetica; font-weight: bold; color: #000012;">Fecha de cierre:&nbsp;</label>
                    <span>
                        {% if entity.fechacierre %}
                            {{ entity.fechacierre |date('d-m-Y H:i:s') }}
                        {% endif %}
                    </span>
            </div>
            <div style="font-size: 14px; font-family: sans-serif, Verdana, Arial, Helvetica; font-weight: bold; color: #0000CC;">
                <label style="font-size: 14px; font-family: sans-serif, Verdana, Arial, Helvetica; font-weight: bold; color: #000012;">Comprobantes validos:&nbsp;</label>
                    <span>{{ validos }}</span>
            </div>
            <div style="font-size: 14px; font-family: sans-serif, Verdana, Arial, Helvetica; font-weight: bold; color: #0000CC;">
                <label style="font-size: 14px; font-family: sans-serif, Verdana, Arial, Helvetica; font-weight: bold; color: #000012;">Comprobantes anulados:&nbsp;</label>
                    <span>{{ anulados }}</span>
            </div>
            <div style="font-size: 14px; font-family: sans-serif, Verdana, Arial, Helvetica; font-weight: bold; color: #0000CC;">
                <label style="font-size: 14px; font-family: sans-serif, Verdana, Arial, Helvetica; font-weight: bold; color: #000012;">Importe cobrado:&nbsp;</label>
                    <span>{{ pagos }}</span>
            </div>
            <div style="font-size: 14px; font-family: sans-serif, Verdana, Arial, Helvetica; font-weight: bold; color: #0000CC;">
                <label style="font-size: 14px; font-family: sans-serif, Verdana, Arial, Helvetica; font-weight: bold; color: #000012;">Importe Anulado:&nbsp;</label>
                    <span>{{ pagos_anulados }}</span>
            </div>
        </fieldset>
    </section>
{% endblock %}