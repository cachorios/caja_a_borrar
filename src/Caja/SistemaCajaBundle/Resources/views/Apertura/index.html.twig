{% extends '::layout.html.twig' %}

{% block title %}
{{ parent() }} - Aperturas  }}
{% endblock %}

{% block page %}

    <section id="Apertura">
        <header>
           <h1>Aperturas
               <div class="filters-right">
                    <a class="btn dropdown-toggle btn-mini" data-toggle="collapse" data-target="#filters">
                        {{ 'views.index.filters'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
                        <span class="caret"></span>
                    </a> &nbsp;
                </div>
           </h1>
        </header>
        {{ wo_render_breadcrumbs() }}
        <div class="row-fluid">
            <div class="span12">
                {% if form_errors(filterForm) %}
                <div class="alert alert-block alert-error fade in form-errors">
                    {{ form_errors(filterForm) }}
                </div>
                {% endif %}
                &nbsp;
            </div>
        </div>

        <div class="row-fluid">
            <div class="span12">
                <div id="filters" class="collapse">

                    <form class="well form-horizontal" action="{{ path('apertura') }}" method="post" {{ form_enctype(filterForm) }}>
                            {{ form_row(filterForm.id) }}
                            {{ form_row(filterForm.fecha) }}
                            {{ form_row(filterForm.importe_inicial) }}
                            {{ form_row(filterForm.fecha_cierre) }}
                        {{ form_rest(filterForm) }}

                        <p>
                            <button type="submit" name="filter_action" value="reset">{{ 'views.index.reset'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
                            <button type="submit" name="filter_action" value="filter">{{ 'views.index.filter'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
                        </p>
                    </form>
                </div>
            </div>
        </div>

        <div class="row-fluid">
            <div class="span12">

                <table class="table table-striped table-bordered table-condensed">
                    <thead>
                    <tr>
                            <th>Nro.Apertura</th>
                            <th>Fecha</th>
                            <th>Importe Inicio</th>
                            <th>Cierre</th>
                        <th>{{ 'views.index.actions'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('apertura_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                            <td>{% if entity.fecha %}{{ entity.fecha|date('d-m-Y H:i:s') }}{% endif %}</td>
                            <td>{{ entity.importeinicial }}</td>
                            <td>{% if entity.fechacierre %}{{ entity.fechacierre|date('d-m-Y H:i:s') }}{% endif %}</td>
                            <td>
        <a class="btn btn-mini" href="{{ path('apertura_show', { 'id': entity.id }) }}">
            {{ 'views.actions.show'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
        <a class="btn btn-mini" href="{{ path('apertura_edit', { 'id': entity.id }) }}">
            {{ 'views.actions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>                            </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row-fluid">
            <div class="span10">
                {{ pagerHtml|raw }}
            </div>

                        <div class="span2">
                <a class="btn btn-primary likepaginator" href="{{ path('apertura_new') }}">
                    {{ 'views.index.createnew'|trans({}, 'JordiLlonchCrudGeneratorBundle') }} Apertura
                </a>
            </div>
            
        </div>
    </section>
{% endblock %}