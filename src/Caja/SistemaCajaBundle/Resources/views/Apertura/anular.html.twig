{% extends '::layout.html.twig' %}
{% block id 'mod_anular' %}
{% block title %}
    {{ parent() }} - Anular Comprobante
{% endblock %}

{% block page %}

    <section id="form_Apertura">

        <header>
            <h1>Anular {{ 'views.edit.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</h1>
        </header>

        {#{{ wo_render_breadcrumbs() }}#}
        {% for type, flashMessages in app.session.flashbag.all() %}
            {% for flashMessage in flashMessages %}
                <div class='alert alert-{{ type }}'>
                    {{ flashMessage|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
                </div>
            {% endfor %}
        {% endfor %}

        <div class="row-fluid hapertura ">
            <div class="span6">Cajero: <span> {{ caja.cajero }} </span> </div>
            <div class="span3"> Apertura Nro. :<span> {{ apertura.id }}</span></div>
            <div class="span3"> Fecha. :<span> {{ apertura.fecha | date('d/m/Y') }}</span></div>

        </div>
        <div class="sub-header">
            <h2 style="font-size: 16px;">Codigo de Barra</h2>
        </div>
        <div style="line-height: 5px;">&nbsp; </div>
        <div class="row-fluid">
            <div class="span8">
                <input id="txtcodigobarra" type="text" value="" name="codigobarra" class="input-xxlarge">
            </div>
            <div class="span4">
                <div id="msgBarra"></div>
                <div id="masDetalleTemp"></div>
            </div>
        </div>
        <div class="sub-header">
            <h2 style="font-size: 16px;">Comprobantes</h2>
        </div>
        <form class="form-horizontal" action="{{ path('apertura_anulado_create' ) }}"
              method="post" {{ form_enctype(form) }}>

            <ul class="errorMessages"></ul>
            {% include 'SistemaCajaBundle:Registro:_form.html.twig' %}

        </form>



        {% include 'SistemaCajaBundle:Apertura:_aperturaanular.js.twig' %}
    </section>

{% endblock page %}
