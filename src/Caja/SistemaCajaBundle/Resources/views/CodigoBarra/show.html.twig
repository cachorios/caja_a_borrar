{% extends '::layout.html.twig' %}
{% block id 'mod_codigobarra' %}

{% block title %}
{{ parent() }} - CodigoBarra {{ 'views.show.show'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block page %}

<section id="view_CodigoBarra">
    <header>
        <h1>CodigoBarra</h1>
    </header>
    {{ wo_render_breadcrumbs() }}
    <div class="row-fluid">
        <div class="span12">
            <form class="form-horizontal">
                <fieldset>                        <div class="control-group">
                            <label class="control-label">Id</label>
                            <div class="controls">                                    <span class="input-xlarge uneditable-input">{{ entity.id }}</span>                            </div>
                        </div>                        <div class="control-group">
                            <label class="control-label">Nombre</label>
                            <div class="controls">                                    <span class="input-xlarge uneditable-input">{{ entity.nombre }}</span>                            </div>
                        </div>                        <div class="control-group">
                            <label class="control-label">Empresa</label>
                            <div class="controls">                                    <span class="input-xlarge uneditable-input">{{ entity.empresa }}</span>                            </div>
                        </div>                        <div class="control-group">
                            <label class="control-label">Longitud</label>
                            <div class="controls">                                    <span class="input-xlarge uneditable-input">{{ entity.longitud }}</span>                            </div>
                        </div>                        <div class="control-group">
                            <label class="control-label">Identificador</label>
                            <div class="controls">                                    <span class="input-xlarge uneditable-input">{{ entity.identificador }}</span>                            </div>
                        </div>                        <div class="control-group">
                            <label class="control-label">Valor</label>
                            <div class="controls">                                    <span class="input-xlarge uneditable-input">{{ entity.valor }}</span>                            </div>
                        </div>                        <div class="control-group">
                            <label class="control-label">Observacion</label>
                            <div class="controls">                                    <span class="input-xlarge uneditable-input">{{ entity.observacion }}</span>                            </div>
                        </div>                </fieldset>
            </form>
        </div>
    </div>


<div class="row-fluid">
    <div class="span12">
    <div class="offset2 span2">
        <a class="btn" href="{{ path('codigobarra') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="span2">
        <a class="btn btn-primary" href="{{ path('codigobarra_edit', { 'id': entity.id }) }}">
            {{ 'views.recordactions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="span2">
        <form action="{{ path('codigobarra_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}');">{{ 'views.recordactions.delete'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
        </form>
    </div>
    </div>
</div>

{% endblock %}