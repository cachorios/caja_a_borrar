{% extends '::layout.html.twig' %}
{% form_theme edit_form _self %}
{% block title %}
{{ parent() }} - CodigoBarra {{ 'views.edit.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block page %}

<section id="form_CodigoBarra">

    <header>
        <h1>CodigoBarra {{ 'views.edit.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</h1>
    </header>
    {{ wo_render_breadcrumbs() }}
    {% for type, flashMessages in app.session.flashbag.all() %}
        {% for flashMessage in flashMessages %} 
            <div class='alert alert-{{ type }}'> 
             {{ flashMessage|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
            </div> 
        {% endfor %} 
    {% endfor %} 

    <div class="row-fluid">
        <div class="span12">
            <form class="form-horizontal" action="{{ path('codigobarra_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
                    <ul class="errorMessages"></ul>

                    {% include 'SistemaCajaBundle:CodigoBarra:_form.html.twig' %}

                <div class="form-actions">
                    <button type="submit" class="btn btn-success">{{ 'views.edit.editbutton'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
                    <button class="btn" type="reset">Cancelar</button>
                </div>
            </form>
        </div>
    </div>


        <div class="row-fluid">
    <div class="span12">
    <div class="offset2 span2">
        <a class="btn" href="{{ path('codigobarra') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="span2">
        <form action="{{ path('codigobarra_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}');">{{ 'views.recordactions.delete'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
        </form>
    </div>
    </div>
</div>


</section>

{% endblock %}